<div class="stats-page">
  <h2>Stats</h2>

  <div class="posts">
    <h3>Posts</h3>
    <table class="stats">
      <thead>
        <tr>
          <th>Author</th>
          <th>Posts</th>
        </tr>
      </thead>
      <tbody>
        <% @posts_stats.each do |author, count| %>
          <tr>
            <td><%= author %></td>
            <td><%= count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="tags">
    <h3>Tags</h3>
    <table class="stats">
      <thead>
        <tr>
          <th>Tag</th>
          <th>Posts</th>
        </tr>
      </thead>
      <tbody>
        <% @tags_stats.each do |tag, count| %>
          <tr>
            <td><%= tag %></td>
            <td><%= count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
