<h1>Login</h1>

<%= form_with(model: @user, url: login_path) do |f| %>
  <div class="field">
    <%= f.label(:email, 'Email:') %>
    <%= f.email_field(:email) %>
  </div>
  <div class="field">
    <%= f.label(:password, 'Password:') %>
    <%= f.password_field(:password) %>
  </div>
  <div class="field">
    <div class="actions">
        <%= f.submit('Login', {class: 'button button-primary'}) %>
    </div>
  </div>
<% end %>
