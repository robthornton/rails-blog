<div class="container">
  <div class="header">
    Header
    <% if logged_in? %>
      <div class="user"><%= current_user.name %></div>
    <% end %>
  </div>

  <%= render('menu') %>

  <div class="messages">
    <% flash.each do |type, message| %>
      <div class="message <%= type %>"><%= message %></div>
    <% end %>
  </div>
</div>
